<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/activity_margin_5"
    android:elevation="@dimen/activity_margin_5"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_margin_3"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">
    <ImageView
        android:id="@+id/img_download"
        android:layout_width="@dimen/liked_pic_size"
        android:layout_height="@dimen/liked_pic_size"
        android:scaleType="centerCrop"/>
</android.support.v7.widget.CardView>