<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    style="@style/widget_cardview"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_margin_10"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/jobID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtview_info_title"
                android:layout_centerVertical="true"
                android:text="1"/>
            <TextView
                android:id="@+id/jobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/style_txtview_standard"
                android:layout_centerVertical="true"
                android:text="JOb Title"
                android:layout_marginLeft="@dimen/activity_margin_3"
                android:layout_toRightOf="@+id/jobID"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>